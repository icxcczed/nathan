<image class="bg" src="/images/bj_2.png"></image>
<form bindsubmit="formSubmit">
<view class="content">
 <view>
  <input name="name" bindblur="nameChange" placeholder-class="phcolor"
    placeholder="输入你的名字" />
  </view>
  <view>
   <input name="phone" bindblur="phoneChange" placeholder-class="phcolor"
    placeholder="输入你的手机号码" />
  </view>
  <view>
  <picker name="num"bindchange="pickerChange"  value="{{picker.index}}" range="{{picker.arr}}">
  参加婚礼人数： {{piacker.arr[picker.index]}}
  </picker>
 </view>
 <view>
   <input name="wish" placeholder-class="phcolor"
   placeholder="输入你的祝福" />
 </view>
 <button form-type="submit" report-submit>提交</button>
 </view>
</form>

